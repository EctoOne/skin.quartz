						<posy>130</posy>
						<width>860</width>
						<include>Genre500Commons</include>
						<label>[COLOR=Grey]$LOCALIZE[515]:[/COLOR] $INFO[ListItem.Genre]</label>
					</control>
					<control type="label" description="Details">
						<posy>170</posy>
						<height>33</height>
						<width>860</width>
						<include>Genre500Commons</include>
						<label>[COLOR=Grey]$LOCALIZE[33029]:[/COLOR] $VAR[500TopLabel]$VAR[Trailer, • ]$INFO[ListItem.MPAA, • ]</label>
					</control>
				</control>
				<control description="Media Info Bottom" type="group">
					<visible>!ListItem.IsParentFolder</visible>
					<visible>container.content(tvshows) | container.content(seasons) | container.content(episodes)</visible>
					<posx>0</posx>
					<posy>825</posy>
					<control description="Genre" type="label">
						<visible>!container.content(episodes)</visible>
						<posy>130</posy>
						<include>Genre51Commons</include>
						<label>[COLOR=Grey]$LOCALIZE[515]:[/COLOR] $INFO[ListItem.Genre]</label>
					</control>
					<control description="Details" type="label">
						<textcolor>White</textcolor>
						<posy>171</posy>
						<include>Genre51Commons</include>
						<label>$VAR[500TopLabel,[COLOR=Grey]$LOCALIZE[33029]:[/COLOR] ]</label>
					</control>
				</control>
			</control>
			<control type="group">
				<animation effect="slide" start="0,0" end="0,-243" time="0" condition="String.IsEqual(Container.NumItems,1)">conditional</animation>
				<animation effect="slide" start="0,0" end="0,-243" time="0" condition="String.IsEqual(Container.NumItems,2)">conditional</animation>
				<animation effect="slide" start="0,0" end="0,-162" time="0" condition="String.IsEqual(Container.NumItems,3)">conditional</animation>
				<animation effect="slide" start="0,0" end="0,-162" time="0" condition="String.IsEqual(Container.NumItems,4)">conditional</animation>
				<animation effect="slide" start="0,0" end="0,-81" time="0" condition="String.IsEqual(Container.NumItems,5)">conditional</animation>
				<animation effect="slide" start="0,0" end="0,-81" time="0" condition="String.IsEqual(Container.NumItems,6)">conditional</animation>
				<posx>1040</posx>
				<posy>80</posy>
				<control type="group" description="Slider">
					<animation condition="Control.HasFocus(60)" effect="slide" start="0,0" end="960,519" time="300" reversible="true">Conditional</animation>
					<animation condition="Control.HasFocus(60)" effect="zoom" start="100" end="0" time="300" reversible="true">Conditional</animation>
					<include>Slider4</include>
					<animation condition="Container(58).Position(0)" effect="slide" start="0,0" end="0,-405" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(1)" effect="slide" start="0,0" end="0,-324" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(2)" effect="slide" start="0,0" end="0,-243" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(3)" effect="slide" start="0,0" end="0,-162" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(4)" effect="slide" start="0,0" end="0,-81" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(5)" effect="slide" start="0,0" end="0,0" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(6)" effect="slide" start="0,0" end="0,81" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(7)" effect="slide" start="0,0" end="0,162" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(8)" effect="slide" start="0,0" end="0,243" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(9)" effect="slide" start="0,0" end="0,324" time="180" easing="inout" reversible="true">Conditional</animation>
					<animation condition="Container(58).Position(10)" effect="slide" start="0,0" end="0,405" time="180" easing="inout" reversible="true">Conditional</animation>
				</control>
				<control type="fixedlist" id="58">
					<visible>container.content(Movies) | container.content(TVshows) | container.content(seasons)</visible>
					<posx>0</posx>
					<posy>0</posy>
					<width>802</width>
					<height>948</height>
					<onleft condition="!Skin.HasSetting(ViewOptions_Hide)">9000</onleft>
					<onleft condition="Skin.HasSetting(ViewOptions_Hide)"></onleft>
					<onright condition="$EXP[isEnabledScrollbar]">9001</onright>
					<onright condition="!$EXP[isEnabledScrollbar]"></onright>
					<onup>58</onup>
					<ondown>58</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="$LOCALIZE[544] 3">Media info 3</viewtype>
					<focusposition>3</focusposition>
					<movement>4</movement>
					<preloaditems>4</preloaditems>
					<scrolltime tween="sine" easing="inout">280</scrolltime>
					<itemlayout width="802" height="81">
						<include>Watched_Marks</include>
						<include>HD_Badge</include>
						<include>3D_Badge</include>
						<include>Sets</include>
						<control type="label" description="Main Label">
							<visible>Integer.IsGreater(ListItem.VideoResolution,700) | ListItem.IsFolder</visible>
							<include>52MainLabel</include>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label" description="Main Label">
							<visible>![Integer.IsGreater(ListItem.VideoResolution,700) | ListItem.IsFolder]</visible>
							<width>711</width>
							<include>52MainLabel</include>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label" description="Label2">
							<visible>container.content(songs) | container.content(musicvideos)</visible>
							<include>52Label2</include>
							<label>$INFO[ListItem.Duration]</label>
						</control>
						<control type="image">
							<visible>!String.IsEmpty(ListItem.Property(UnwatchedEpisodes)) + [container.content(TVshows) | container.content(seasons)] + !String.IsEqual(ListItem.Property(UnwatchedEpisodes),0)</visible>
							<right>9</right>
							<posy>0</posy>
							<height>81</height>
							<width>90</width>
							<aspectratio>keep</aspectratio>
							<texture>img/UnwatchedBadgeNF.png</texture>
						</control>
						<control type="label" description="Label2">
							<visible>!String.IsEmpty(ListItem.Property(UnwatchedEpisodes)) + [container.content(TVshows) | container.content(seasons)] + !String.IsEqual(ListItem.Property(UnwatchedEpisodes),0)</visible>
							<right>9</right>
							<posy>0</posy>
							<height>81</height>
							<width>90</width>
							<font>size16</font>
							<scroll>true</scroll>
							<align>center</align>
							<scroll>false</scroll>
							<textcolor>HL</textcolor>
							<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
						</control>
					</itemlayout>
