						<control type="label" description="Label2">
							<visible>container.content(songs) | container.content(musicvideos)</visible>
							<include>52Label2FO</include>
							<label>$INFO[ListItem.Duration]</label>
						</control>
						<control type="image">
							<visible>!String.IsEmpty(ListItem.Property(UnwatchedEpisodes)) + [container.content(TVshows) | container.content(seasons)] + !String.IsEqual(ListItem.Property(UnwatchedEpisodes),0)</visible>
							<right>9</right>
							<posy>0</posy>
							<height>81</height>
							<width>90</width>
							<aspectratio>keep</aspectratio>
							<texture>img/UnwatchedBadgeNF.png</texture>
						</control>
						<control type="label" description="Label2">
							<visible>!String.IsEmpty(ListItem.Property(UnwatchedEpisodes)) + [container.content(TVshows) | container.content(seasons)] + !String.IsEqual(ListItem.Property(UnwatchedEpisodes),0)</visible>
							<right>9</right>
							<posy>0</posy>
							<height>81</height>
							<width>90</width>
							<font>size16</font>
							<scroll>true</scroll>
							<align>center</align>
							<scroll>false</scroll>
							<textcolor>HL</textcolor>
							<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
