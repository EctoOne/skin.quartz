<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">901</defaultcontrol>
	<include>OpenClose</include>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)</visible>
	<visible>![Window.IsActive(sliderdialog) | Window.IsActive(pvrosdchannels)]</visible>
	<visible>Window.IsActive(fullscreenvideo)</visible>
	<animation effect="fade" start="0" end="100" time="400">Visible</animation>
	<animation effect="fade" start="100" end="0" time="100">Hidden</animation>
	<controls>
		<control type="group" description="Top Bar">
			<visible>![Player.ShowInfo | Window.IsVisible(DialogPlayerProcessInfo.xml)]</visible>
			<visible>!Skin.HasSetting(UseExtInfo)</visible>
			<animation effect="fade" start="0" end="100" time="400">Visible</animation>
			<animation effect="fade" start="100" end="0" time="100">Hidden</animation>
			<control type="image" description="Background">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>69</height>
				<texture colordiffuse="$VAR[OSDTransperancy]">OSD/OSDBackground.png</texture>
			</control>
			<control type="label" description="Clock">
				<posx>60</posx>
				<posy>0</posy>
				<width>195</width>
				<height>60</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>size18</font>
				<textcolor>Silver</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<control type="label" description="End time">
				<visible>!String.isempty(Player.Duration)</visible>
				<visible>Player.HasVideo + ![Player.HasGame | VideoPlayer.HasEpg]</visible>
				<posx>60r</posx>
				<posy>0</posy>
				<width>300</width>
				<height>60</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>size18</font>
				<textcolor>Silver</textcolor>
				<label>[COLOR Grey2]$LOCALIZE[31049]:[/COLOR] $INFO[Player.FinishTime]</label>
			</control>
			<control type="label" description="PVR end time">
				<visible>VideoPlayer.HasEpg</visible>
				<posx>60r</posx>
				<posy>0</posy>
				<width>300</width>
				<height>60</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>size18</font>
				<textcolor>Silver</textcolor>
				<label>[COLOR Grey2]$LOCALIZE[31049]:[/COLOR] $INFO[PVR.EpgEventFinishTime]</label>
			</control>
			<control type="label" description="title">
				<centerleft>960</centerleft>
				<posy>0</posy>
				<width>1200</width>
				<height>60</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[VideoPlayer.TVShowTitle,,[COLOR=HL]  •  [/COLOR]]$INFO[VideoPlayer.Season,,.]$INFO[VideoPlayer.Episode,,[COLOR=HL]  •  [/COLOR]]$INFO[VideoPlayer.ChannelNumber,,.]$INFO[VideoPlayer.ChannelName,,: ]$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Album,, - ]$INFO[VideoPlayer.Title]</label>
			</control>
		</control>
		<control type="group">
			<posy>270</posy>
			<control type="image" description="Background">
				<visible>player.forwarding | player.rewinding | [Player.Paused + Player.Caching] | [Player.DisplayAfterSeek + !String.IsEmpty(Player.SeekOffset)]</visible>
				<posx>855</posx>
				<posy>525</posy>
				<width>210</width>
				<height>75</height>
				<texture border="6">img/BlackRounded.png</texture>
			</control>
			<control type="label" id="24" description="Buffering label">
				<visible>[Player.Paused + Player.Caching] + !Player.Seeking</visible>
				<include>SeekbarLabels</include>
				<label>$INFO[Player.CacheLevel,,%]</label>
			</control>
			<control type="label" description="2x RW FW label">
				<visible>player.forwarding2x | player.rewinding2x</visible>
				<include>SeekbarLabels</include>
				<label>2 X</label>
			</control>
			<control type="label" description="4x RW FW label">
				<visible>player.forwarding4x | player.rewinding4x</visible>
				<include>SeekbarLabels</include>
				<label>4 X</label>
			</control>
			<control type="label" description="8x RW FW label">
				<visible>player.forwarding8x | player.rewinding8x</visible>
				<include>SeekbarLabels</include>
				<label>8 X</label>
			</control>
			<control type="label" description="16x RW FW label">
				<visible>player.forwarding16x | player.rewinding16x</visible>
				<include>SeekbarLabels</include>
				<label>16 X</label>
			</control>
			<control type="label" description="32x RW FW label">
				<visible>player.forwarding32x | player.rewinding32x</visible>
				<include>SeekbarLabels</include>
				<label>32 X</label>
			</control>
			<control type="label" description="Seek time label">
				<visible>![player.forwarding | player.rewinding]</visible>
				<visible>Player.DisplayAfterSeek</visible>
				<include>SeekbarLabels</include>
				<label>$INFO[Player.SeekOffset]</label>
			</control>
		</control>
		<control type="group" description="Dialog Background">
			<animation type="Conditional" condition="Window.IsActive(videoosd.xml) + !Window.IsActive(VideoOSDBookmarks.xml)">
				<effect type="slide" start="0,0" end="0,-68" time="120" tween="cubic" easing="inout" reversible="true" />
			</animation>
			<control type="image">
				<posx>0</posx>
				<posy>975</posy>
				<width>1920</width>
				<height>225</height>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="$VAR[OSDTransperancy]">OSD/OSDBackground.png</texture>
			</control>
		</control>
		<control type="group">
			<posy>1014</posy>
			<control type="progress" id="23">
				<description>Progressbar</description>
				<posx>360</posx>
				<posy>3</posy>
				<width>1200</width>
				<height>24</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<posx>150</posx>
				<posy>0</posy>
				<height>30</height>
				<width>180</width>
				<align>left</align>
				<label>$INFO[Player.Time]</label>
				<font>size17</font>
			</control>
			<control type="label">
				<posx>60r</posx>
				<posy>0</posy>
				<height>30</height>
				<width>180</width>
				<align>right</align>
				<label>$INFO[Player.TimeRemaining,-]</label>
				<font>size17</font>
			</control>
		</control>
		<control type="group">
			<posy>1008</posy>
			<posx>0</posx>
			<control type="image" description="Pause">
				<visible>Player.Paused + !Player.Caching</visible>
				<posx>52</posx>
				<include>SeekbarIconsCommons</include>
				<texture border="2">OSD/OSDProgressPause.png</texture>
			</control>
			<control type="image" description="Play">
				<visible>player.playing | player.forwarding2x | player.forwarding4x | player.forwarding8x | player.forwarding16x | player.forwarding32x</visible>
				<posx>52</posx>
				<include>SeekbarIconsCommons</include>
				<texture border="2">OSD/OSDProgressPlay.png</texture>
			</control>
			<control type="image" description="FF 2">
				<visible>player.forwarding2x | player.forwarding4x | player.forwarding8x | player.forwarding16x | player.forwarding32x</visible>
				<posx>75</posx>
				<include>SeekbarIconsCommons</include>
				<texture border="2">OSD/OSDProgressPlay.png</texture>
			</control>
			<control type="image" description="RW 2">
				<visible>player.rewinding2x | player.rewinding4x | player.rewinding8x | player.rewinding16x | player.rewinding32x</visible>
				<posx>52</posx>
				<include>SeekbarIconsCommons</include>
				<texture flipx="true" border="2">OSD/OSDProgressPlay.png</texture>
			</control>
			<control type="image" description="RW 2">
				<visible>player.rewinding2x | player.rewinding4x | player.rewinding8x | player.rewinding16x | player.rewinding32x</visible>
				<posx>75</posx>
				<include>SeekbarIconsCommons</include>
				<texture flipx="true" border="2">OSD/OSDProgressPlay.png</texture>
			</control>
		</control>
	</controls>
</window>
